{{!-- Host Property Management Page --}}
<div class="container">
  <div class="page-header">
    <h1>My Properties</h1>
    <p>Manage your BNB listings</p>
  </div>

  {{#if success}}
    <div class="alert alert-success">
      <span>{{success}}</span>
    </div>
  {{/if}}

  {{#if error}}
    <div class="alert alert-error">
      <span>{{error}}</span>
    </div>
  {{/if}}

  <!-- Add New Property Button -->
  <div class="action-bar">
    <button id="toggleAddForm" class="btn btn-primary">
      <span class="btn-icon">+</span>
      Add New Property
    </button>
  </div>

  <!-- Add New Property Form (Hidden by default) -->
  <div id="addPropertyForm" class="form-section" style="display: none;">
    <h3>Add New Property</h3>
    <form method="POST" action="/properties/manage">
      <div class="form-row">
        <div class="form-group">
          <label for="title" class="form-label">Property Title *</label>
          <input 
            type="text" 
            id="title" 
            name="title" 
            required 
            maxlength="100"
            class="form-control"
            placeholder="e.g., Cozy Downtown Apartment"
          >
        </div>
        
        <div class="form-group">
          <label for="type" class="form-label">Property Type *</label>
          <select id="type" name="type" required class="form-control">
            <option value="">Select Type</option>
            <option value="apartment">Apartment</option>
            <option value="house">House</option>
            <option value="villa">Villa</option>
            <option value="cabin">Cabin</option>
            <option value="loft">Loft</option>
            <option value="condo">Condo</option>
            <option value="other">Other</option>
          </select>
        </div>
      </div>

      <div class="form-group">
        <label for="description" class="form-label">Description *</label>
        <textarea 
          id="description" 
          name="description" 
          required 
          rows="4" 
          maxlength="1000"
          class="form-control"
          placeholder="Describe your property, amenities, and what makes it special..."
        ></textarea>
      </div>

      <div class="form-row">
        <div class="form-group">
          <label for="city" class="form-label">City *</label>
          <input 
            type="text" 
            id="city" 
            name="city" 
            required 
            class="form-control"
            placeholder="e.g., New York"
          >
        </div>
        
        <div class="form-group">
          <label for="pricePerNight" class="form-label">Price per Night ($) *</label>
          <input 
            type="number" 
            id="pricePerNight" 
            name="pricePerNight" 
            required 
            min="1"
            class="form-control"
            placeholder="e.g., 120"
          >
        </div>
      </div>

      <div class="form-row">
        <div class="form-group">
          <label for="maxGuests" class="form-label">Max Guests *</label>
          <input 
            type="number" 
            id="maxGuests" 
            name="maxGuests" 
            required 
            min="1" 
            max="20"
            class="form-control"
            value="2"
          >
        </div>
        
        <div class="form-group">
          <label for="bedrooms" class="form-label">Bedrooms</label>
          <input 
            type="number" 
            id="bedrooms" 
            name="bedrooms" 
            min="0" 
            max="10"
            class="form-control"
            value="1"
          >
        </div>
        
        <div class="form-group">
          <label for="bathrooms" class="form-label">Bathrooms</label>
          <input 
            type="number" 
            id="bathrooms" 
            name="bathrooms" 
            min="0" 
            max="10"
            step="0.5"
            class="form-control"
            value="1"
          >
        </div>
      </div>

      <div class="form-group">
        <label for="amenities" class="form-label">Amenities</label>
        <input 
          type="text" 
          id="amenities" 
          name="amenities" 
          class="form-control"
          placeholder="e.g., WiFi, Kitchen, Parking, Pool (comma separated)"
        >
        <small class="form-help">Separate amenities with commas</small>
      </div>

      <div class="form-actions">
        <button type="submit" class="btn btn-primary">Add Property</button>
        <button type="button" id="cancelAdd" class="btn btn-ghost">Cancel</button>
      </div>
    </form>
  </div>

  <!-- Properties List -->
  <div class="properties-section">
    <h3>Your Properties ({{properties.length}})</h3>
    
    {{#if properties.length}}
      <div class="properties-grid">
        {{#each properties}}
          <div class="property-card">
            <div class="property-header">
              <h4 class="property-title">{{this.title}}</h4>
              <span class="property-type">{{this.type}}</span>
            </div>
            
            <div class="property-details">
              <p class="property-location">Location: {{this.city}}</p>
              <p class="property-price">Price: ${{this.pricePerNight}}/night</p>
              <p class="property-capacity">Max Guests: {{this.maxGuests}}</p>
              {{#if this.bedrooms}}
                <p class="property-rooms">Bedrooms: {{this.bedrooms}}</p>
              {{/if}}
            </div>

            <div class="property-description">
              <p>{{this.description}}</p>
            </div>

            {{#if this.amenities.length}}
              <div class="property-amenities">
                <strong>Amenities:</strong>
                <div class="amenities-list">
                  {{#each this.amenities}}
                    <span class="amenity-tag">{{this}}</span>
                  {{/each}}
                </div>
              </div>
            {{/if}}

            <div class="property-stats">
              <span class="stat">Rating: {{#if this.rating}}{{this.rating}}/5{{else}}No ratings yet{{/if}}</span>
            </div>

            <div class="property-actions">
              <a href="/property/{{this._id}}" class="btn btn-ghost btn-small">View Details</a>
              <button onclick="editProperty('{{this._id}}')" class="btn btn-secondary btn-small">Edit</button>
              <button onclick="deleteProperty('{{this._id}}', '{{this.title}}')" class="btn btn-danger btn-small">Delete</button>
            </div>
          </div>
        {{/each}}
      </div>
    {{else}}
      <div class="empty-state">
        <h3>No Properties Yet</h3>
        <p>Start by adding your first property to begin hosting!</p>
      </div>
    {{/if}}
  </div>

  <div class="back-link">
    <a href="/users/profile" class="btn btn-ghost">← Back to Profile</a>
  </div>
</div>

<!-- JavaScript for form interactions -->
<script>
document.addEventListener('DOMContentLoaded', function() {
  const toggleButton = document.getElementById('toggleAddForm');
  const addForm = document.getElementById('addPropertyForm');
  const cancelButton = document.getElementById('cancelAdd');

  toggleButton.addEventListener('click', function() {
    if (addForm.style.display === 'none') {
      addForm.style.display = 'block';
      toggleButton.textContent = '− Cancel';
      addForm.scrollIntoView({ behavior: 'smooth' });
    } else {
      addForm.style.display = 'none';
      toggleButton.innerHTML = '<span class="btn-icon">+</span> Add New Property';
    }
  });

  cancelButton.addEventListener('click', function() {
    addForm.style.display = 'none';
    toggleButton.innerHTML = '<span class="btn-icon">+</span> Add New Property';
  });
});

function editProperty(propertyId) {
  window.location.href = `/properties/manage/${propertyId}/edit`;
}

function deleteProperty(propertyId, title) {
  if (confirm(`Are you sure you want to delete "${title}"? This action cannot be undone.`)) {
    // Create a form to submit delete
    const form = document.createElement('form');
    form.method = 'POST';
    form.action = `/properties/manage/${propertyId}/delete`;
    document.body.appendChild(form);
    form.submit();
  }
}
</script>

